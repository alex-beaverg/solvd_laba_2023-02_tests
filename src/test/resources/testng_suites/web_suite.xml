<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Web suite" verbose="1" parallel="tests" thread-count="1">
    <test name="Web login and logout tests" parallel="methods" thread-count="1">
        <classes>
            <class name="com.solvd.tests.web.LoginAndLogoutTest"/>
        </classes>
    </test>
    <test name="Web product tests" parallel="methods" thread-count="1">
        <classes>
            <class name="com.solvd.tests.web.ProductTest"/>
        </classes>
    </test>
    <test name="Web basket tests" parallel="methods" thread-count="1">
        <classes>
            <class name="com.solvd.tests.web.BasketTest"/>
        </classes>
    </test>
    <test name="Web scroll tests" parallel="methods" thread-count="1">
        <classes>
            <class name="com.solvd.tests.web.ScrollTest"/>
        </classes>
    </test>
</suite>